<div class="container" style="background-color:rgb(175, 236, 226); padding-bottom:1%;">
<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8">
        <h2>Talk about your toy!</h2>
        <h3>→First, click below to upload an image of your toy←</h3>
        <button style="background-color:#5ddfc9"><a href="#" id="upload_widget_opener">Upload your toy image</a></button>
        <br>
        <br>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Name of Toy</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter Toy Name">
          </div>
          <div class="form-group">
            <label for="example-description">Description (How old is it? How did you acquire it? Etc.)</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Toy Description"></textarea>
          </div>
          <br>
            <button id="submit" class="btn float-right" style="background-color:#5ddfc9">Submit</button>
        </form>
        <h4>Recent Toy List:</h4>
          <ul id="example-list" class="list-group">
            {{#each data.toys}}
            <li data-id="{{this.id}}" class="list-group-item">
              <a href="toys/{{this.id}}">{{this.text}}</a>
              <button class="btn btn-danger float-right delete">ｘ</button>
            </li>
            {{/each}}
          </ul>
      </div>
      <div class="col-4" style="padding-top:1%;">
        <button class="btn float-right"><a href="/" style="float:left">Home/Niche Toys</a></button>
        <br>
        <div class="card mt-4" style="background-color:#d8e7e1;">
          <div class="card-body">
            <h5 class="card-title">Toy News from Users</h5>
            <div id="general-comments">
                <form class="clearfix mb-4" action="POST">
                  <div class="form-group">
                  <label for="general-comment">Do you have any new toy news?</label>
                    <textarea class="form-control" id="general-comment" aria-describedby="general-comment" rows="5" placeholder="User Toy News"></textarea>
                  </div>
                  <button id="comment-submit" class="btn float-right" style="background-color:#5ddfc9">Submit</button>
                </form>
                <h5 class="previous-comments">Latest Toy News from Users</h5>
                  {{> general/genpartial }}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="myModal" class="modal">
      <div class="modal-content">
        <h4 id="remind"></h4>
            <img src="/images/alertmessage.jpg" alt="Reminder">
      </div>
    </div>
  </div>
</div>
</div>

<script src="/js/sharing.js"></script>
<script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>